#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
    echo "Error: data.json not found."
    exit 1
fi

# Extract top-level name
name=$(grep '"name":' data.json | head -1 | sed 's/.*"name": *"\([^"]*\)".*/\1/')

# Extract first type
type=$(grep -A 3 '"types":' data.json | grep '"name":' | head -1 | sed 's/.*"name": *"\([^"]*\)".*/\1/')

# Extract weight and height (integers)
weight=$(grep '"weight":' data.json | head -1 | sed 's/.*: *//' | tr -d ',')
height=$(grep '"height":' data.json | head -1 | sed 's/.*: *//' | tr -d ',')

# Convert to readable units using awk
weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.0f", w / 10 }')
height_m=$(awk -v h="$height" 'BEGIN { printf "%.1f", h / 10 }')

# Capitalize name and type
Name=$(echo "$name" | sed 's/.*/\L&/; s/[a-z]*/\u&/')
Type=$(echo "$type" | sed 's/.*/\L&/; s/[a-z]*/\u&/')

# Final Output
echo "$Name is of type $Type, weighs ${weight_kg}kg, and is ${height_m}m tall."
